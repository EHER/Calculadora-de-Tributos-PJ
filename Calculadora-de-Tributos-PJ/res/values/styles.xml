<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- PadrÃ£o de telas -->
    <style name="ScreenBase">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/bg_solid_light_blue</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/BorderLeftRight</item>
        <item name="android:paddingRight">@dimen/BorderLeftRight</item>
        <item name="android:paddingTop">@dimen/BorderTopDown</item>
        <item name="android:paddingBottom">@dimen/BorderTopDown</item>
    </style>
    
    <style name="FontBase">
        <item name="android:textColor">@color/Preto</item>
        <item name="android:textSize">@dimen/TextSize</item>
    </style>

    <style name="FontBaseBold" parent="@style/FontBase">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontBaseItalic" parent="@style/FontBase">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="FontBaseBoldItalic" parent="@style/FontBase">
        <item name="android:textStyle">bold|italic</item>
    </style>
        
    <style name="ButtonBase">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">@dimen/ButtonHeight</item>
    	<item name="android:gravity">left|center_vertical</item>
    	<item name="android:background">@drawable/rounded_button_menu</item>
    	<item name="android:layout_marginBottom">@dimen/SpaceAfterButton</item>
    	<item name="android:textStyle">bold</item>
    	<item name="android:textSize">@dimen/TextButtonSize</item>
    	<item name="android:textColor">@color/Preto</item>
    	<item name="android:drawableRight">@drawable/ic_next</item>
    </style>
</resources>
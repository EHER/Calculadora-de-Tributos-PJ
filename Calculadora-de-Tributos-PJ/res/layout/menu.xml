<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradientbackground"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout android:background="@drawable/border"
        		 android:layout_height="fill_parent"
        		 android:layout_width="fill_parent"
        		 android:gravity="center_horizontal"
        		 android:orientation="vertical">
		    
	       <Button 
	            android:id="@+id/btn_calc_by_value_per_hour"
		       	android:layout_width="fill_parent"
		       	android:layout_height="wrap_content"
		       	android:background="@drawable/rounded_button_menu"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            android:padding="10dp"
		       	android:layout_margin="10dp"
		       	android:text="Cálculo pelo valor/hora"
		       	android:textColor="#ffffff"
		       	android:onClick="CallCalcActivity_ByValuePerHour" />
		    
		    <Button 
		        android:id="@+id/btn_calc_by_value"
	        	android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:background="@drawable/rounded_button_menu"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            android:padding="10dp"
	            android:layout_margin="10dp"
	            android:textColor="#ffffff"
	        	android:text="Cálculo pelo valor bruto"
	        	android:onClick="CallCalcActivity_ByValue"/>	
	        
	        <Button 
		        android:id="@+id/configuracoes"
	        	android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:background="@drawable/rounded_button_menu"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            android:padding="10dp"
	            android:layout_margin="10dp"
	            android:textColor="#ffffff"
	        	android:text="Configurações"
	        	android:onClick="CallConfigActivity"/>
   
	</LinearLayout>
</LinearLayout>